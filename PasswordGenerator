#Simple password generator I did in little time, it involves random letters and numbers from a list
from random import choice
from string import ascii_lowercase
from time import sleep

#password Generator
alphabets=list(ascii_lowercase)
numbers=[str(i) for i in range(0,10)]
combined_tuff=numbers+alphabets

def menu():
    print("Simple Password Generator:")
    print("Choose a number to get started")
    print()
    print("1. Generate Password")
    print("2. View Password")
    print("0. Exit Console")

def view():
    pass_response=input("Would you like to view strong or weak passwords? ")
    if pass_response.lower()=='weak':
        with open("weak_passwords.txt",'r') as f:
            for line in f.readlines():
                data=line.rstrip()
                print("{0}".format(data))
    elif pass_response.lower()=='strong':
            with open("strong_passwords.txt", 'r') as f:
                for line in f.readlines():
                    data = line.rstrip()
                    print("{0}".format(data))


def generate():
    pass_type=input("Do you want a strong or a weak password? (strong,weak) ")
    weak_password=''
    strong_password=''
    if pass_type.lower()=='weak':
        for x in range(6):
            weak_password+=choice(combined_tuff)
        with open("weak_passwords.txt",'a') as f:
            f.write("{0} \n".format(weak_password))
            sleep(1)
            print("Password generated, choose view to view it.")
    elif pass_type.lower()=='strong':
        for x in range(10):
            strong_password+=choice(combined_tuff)
        with open("strong_passwords.txt",'a') as w:
            w.write("{0} \n".format(strong_password))
            sleep(1)
            print("Password generated, choose view to view it.")
    else:
        print("Wrong input!")

user_choice=''
while user_choice!=0:
    user_choice=3
    menu()

    try:
        user_choice=int(input())
        print()
    except:
        print("Invalid Entry, try again")
        print()
    if user_choice==1:
        generate()
        print()
    elif user_choice==2:
        view()
        print()
    else:
        print("Input not in the menu!")
        print()


